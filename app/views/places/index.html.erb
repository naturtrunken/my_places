<h1>Places</h1>

<%=
    render(
            'shared/page_navigation',
            :left => link_to(
                    '← Back to the map',
                    root_path
            ),
            :right => link_to(
                    'New Place',
                    new_place_path
            )
    )
%>

<table>
  <tbody>
  <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td class="action">
          <%= link_to 'Edit', edit_place_path(place) %>
          <span class="inline-divider">|</span>
          <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
